<%- include('../partials/head', { title }) %>
<%- include('../partials/nav') %>
<main class="mx-auto flex max-w-6xl flex-col gap-6 px-6 py-16 lg:flex-row">
  <section class="flex-1">
    <h1 class="text-3xl font-semibold text-slate-900">Welcome back</h1>
    <p class="mt-3 text-slate-600">
      Sign in to manage services, publish announcements, and monitor the OSS Support Portal.
    </p>
    <div class="mt-6 rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <h2 class="text-lg font-semibold">Default admin credentials</h2>
      <p class="mt-2 text-slate-600">Username: <span class="font-medium">admin</span></p>
      <p class="text-slate-600">Password: <span class="font-medium">Brillar</span></p>
    </div>
  </section>
  <section class="w-full max-w-md">
    <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm">
      <h2 class="text-xl font-semibold">Admin login</h2>
      <div class="mt-4 flex flex-col gap-3">
        <%- include('../partials/flash') %>
      </div>
      <form class="mt-6 flex flex-col gap-4" action="/login" method="POST">
        <div>
          <label class="text-sm font-medium text-slate-600" for="username">Username</label>
          <input
            class="mt-2 w-full rounded-xl border border-slate-200 px-4 py-2 focus:border-indigo-500 focus:outline-none"
            id="username"
            name="username"
            type="text"
            required
          />
        </div>
        <div>
          <label class="text-sm font-medium text-slate-600" for="password">Password</label>
          <input
            class="mt-2 w-full rounded-xl border border-slate-200 px-4 py-2 focus:border-indigo-500 focus:outline-none"
            id="password"
            name="password"
            type="password"
            required
          />
        </div>
        <button class="rounded-xl bg-indigo-600 px-4 py-2 font-medium text-white hover:bg-indigo-500" type="submit">
          Sign in
        </button>
      </form>
    </div>
  </section>
</main>
<%- include('../partials/footer') %>
