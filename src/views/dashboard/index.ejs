<%- include('../partials/head', { title }) %>
<%- include('../partials/nav') %>
<main class="mx-auto max-w-6xl px-6 py-12">
  <div class="flex flex-col gap-6">
    <div class="rounded-3xl bg-gradient-to-br from-indigo-600 via-indigo-500 to-sky-500 p-8 text-white shadow-xl">
      <p class="text-sm uppercase tracking-[0.3em] text-indigo-100">System status</p>
      <h1 class="mt-3 text-3xl font-semibold">Overall status: <%= statusLabels[overallStatus] %></h1>
      <p class="mt-2 text-indigo-100">
        Live snapshot across all active OSS services. Updated from the admin panel.
      </p>
      <span class="mt-6 inline-flex items-center rounded-full border border-white/30 bg-white/10 px-4 py-2 text-sm font-medium">
        <%= new Date().toLocaleString() %>
      </span>
    </div>

    <section class="grid gap-4 rounded-2xl border border-slate-200 bg-white p-6 shadow-sm md:grid-cols-4">
      <div>
        <p class="text-xs uppercase tracking-wider text-slate-400">Total services</p>
        <p class="mt-2 text-2xl font-semibold text-slate-900"><%= statusCounts.total %></p>
      </div>
      <div>
        <p class="text-xs uppercase tracking-wider text-slate-400">Operational</p>
        <p class="mt-2 text-2xl font-semibold text-emerald-600"><%= statusCounts.OPERATIONAL || 0 %></p>
      </div>
      <div>
        <p class="text-xs uppercase tracking-wider text-slate-400">Needs attention</p>
        <p class="mt-2 text-2xl font-semibold text-amber-600"><%= attentionServices.length %></p>
      </div>
      <div>
        <p class="text-xs uppercase tracking-wider text-slate-400">Outages</p>
        <p class="mt-2 text-2xl font-semibold text-rose-600"><%= downServices.length %></p>
      </div>
    </section>

    <div class="grid gap-6 lg:grid-cols-[2fr_1fr]">
      <section class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
        <div class="flex items-center justify-between">
          <h2 class="text-xl font-semibold">Service status board</h2>
          <span class="text-sm text-slate-500"><%= groupedServices.length %> categories</span>
        </div>
        <div class="mt-6 flex flex-col gap-6">
          <% if (!groupedServices.length) { %>
            <p class="text-slate-500">No active services yet. Admins can add them from the admin panel.</p>
          <% } %>
          <% groupedServices.forEach((group) => { %>
            <div>
              <h3 class="text-sm font-semibold uppercase tracking-wider text-slate-500"><%= group.category %></h3>
              <div class="mt-3 grid gap-4 sm:grid-cols-2">
                <% group.items.forEach((service) => { %>
                  <div class="rounded-2xl border border-slate-200 bg-slate-50 p-4">
                    <div class="flex items-start justify-between gap-3">
                      <div>
                        <h4 class="text-lg font-semibold text-slate-900"><%= service.name %></h4>
                        <p class="mt-1 text-sm text-slate-500"><%= service.description || 'No description provided.' %></p>
                      </div>
                      <span class="whitespace-nowrap rounded-full border px-3 py-1 text-xs font-semibold <%= statusColors[service.status] %>">
                        <%= statusLabels[service.status] %>
                      </span>
                    </div>
                    <p class="mt-3 text-xs text-slate-400">Last updated: <%= service.updatedAt.toLocaleString() %></p>
                  </div>
                <% }) %>
              </div>
            </div>
          <% }) %>
        </div>
      </section>

      <section class="flex flex-col gap-6">
        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
          <h2 class="text-xl font-semibold">Monitoring highlights</h2>
          <div class="mt-4 space-y-3 text-sm text-slate-600">
            <% if (!attentionServices.length) { %>
              <p>All services are reporting as operational. No customer impact detected.</p>
            <% } %>
            <% if (downServices.length) { %>
              <div>
                <p class="font-semibold text-rose-600">Service outages</p>
                <ul class="mt-2 list-disc space-y-1 pl-5">
                  <% downServices.forEach((service) => { %>
                    <li><%= service.name %> — <%= statusLabels[service.status] %></li>
                  <% }) %>
                </ul>
              </div>
            <% } %>
            <% if (!downServices.length && attentionServices.length) { %>
              <div>
                <p class="font-semibold text-amber-600">Degraded or maintenance services</p>
                <ul class="mt-2 list-disc space-y-1 pl-5">
                  <% attentionServices.forEach((service) => { %>
                    <% if (service.status !== "OPERATIONAL") { %>
                      <li><%= service.name %> — <%= statusLabels[service.status] %></li>
                    <% } %>
                  <% }) %>
                </ul>
              </div>
            <% } %>
          </div>
        </div>

        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
          <h2 class="text-xl font-semibold">What to do if a server is down</h2>
          <ol class="mt-4 list-decimal space-y-2 pl-5 text-sm text-slate-600">
            <li>Confirm the impacted API in the status board and share the outage label with customers.</li>
            <li>Check the latest announcement updates and post a new notice if none exists.</li>
            <li>Escalate to the on-call owner with the service name, status, and timestamp.</li>
            <li>Provide workaround guidance and an estimated next update time.</li>
          </ol>
        </div>

        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
          <h2 class="text-xl font-semibold">Active announcements</h2>
          <div class="mt-4 flex flex-col gap-4">
            <% if (!activeAnnouncements.length) { %>
              <p class="text-slate-500">No active announcements right now.</p>
            <% } %>
            <% activeAnnouncements.forEach((announcement) => { %>
              <article class="rounded-xl border border-slate-200 bg-slate-50 p-4">
                <h3 class="text-sm font-semibold text-indigo-700"><%= announcement.title %></h3>
                <div class="prose prose-sm mt-2 text-slate-600"><%- announcement.html %></div>
              </article>
            <% }) %>
          </div>
        </div>

        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
          <details>
            <summary class="cursor-pointer text-lg font-semibold">Recent announcements</summary>
            <div class="mt-4 flex flex-col gap-3">
              <% if (!recentAnnouncements.length) { %>
                <p class="text-slate-500">No announcements posted in the last 30 days.</p>
              <% } %>
              <% recentAnnouncements.forEach((announcement) => { %>
                <article class="rounded-xl border border-slate-200 bg-slate-50 p-4">
                  <h4 class="text-sm font-semibold text-slate-700"><%= announcement.title %></h4>
                  <p class="mt-1 text-xs text-slate-400"><%= announcement.createdAt.toLocaleString() %></p>
                  <div class="prose prose-sm mt-2 text-slate-600"><%- announcement.html %></div>
                </article>
              <% }) %>
            </div>
          </details>
        </div>
      </section>
    </div>
  </div>
</main>
<%- include('../partials/footer') %>
